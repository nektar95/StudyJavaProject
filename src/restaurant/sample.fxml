<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="640.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="restaurant.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <right>
      <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="new_customer_button" mnemonicParsing="false" onAction="#onNewCustomerClick" text="New customer" />
            <Button fx:id="new_provider_button" mnemonicParsing="false" onAction="#onNewProviderClick" text="New provider" />
            <Button fx:id="new_meal_button" mnemonicParsing="false" onAction="#onNewMealClick" text="New meal" />
            <Button fx:id="new_order_button" mnemonicParsing="false" onAction="#onNewOrderClick" text="New order" textFill="RED" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
         </padding>
         <effect>
            <DropShadow color="#6b6b6b" height="11.67" radius="7.6675" />
         </effect>
      </VBox>
   </right>
   <center>
      <AnchorPane fx:id="anchorMap" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #808080;" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
